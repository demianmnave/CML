{
  "version": 6,
  "configurePresets": [
    {
      "name": ".windows",
      "hidden": true,
      "description": "Mark a configuration as Windows-only",
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Windows"
      }
    },

    {
      "name": ".linux",
      "hidden": true,
      "description": "Mark a configuration as Linux-only",
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Linux"
      }
    },

    {
      "name": ".macosx",
      "hidden": true,
      "description": "Mark a configuration as MacOS/X-only",
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Darwin"
      }
    },

    {
      "name": ".common",
      "hidden": true,
      "description": "Settings applicable to all configurations",
      "binaryDir": "${sourceDir}/.build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },

    {
      "name": ".static",
      "hidden": true,
      "description": "Enable static builds",
      "binaryDir": "${sourceDir}/.build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "BUILD_SHARED_LIBS": {
          "type": "BOOL",
          "value": false
        },
        "BUILD_STATIC_RUNTIME": {
          "type": "BOOL",
          "value": true
        }
      }
    },

    {
      "name": ".testing",
      "hidden": true,
      "description": "Enable testing",
      "cacheVariables": {
        "BUILD_TESTING": {
          "type": "BOOL",
          "value": true
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": ".windows",
      "hidden": true,
      "description": "Mark a build configuration as Windows-only",
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Windows"
      }
    },

    {
      "name": ".linux",
      "hidden": true,
      "description": "Mark a build configuration as Linux-only",
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Linux"
      }
    },

    {
      "name": ".macosx",
      "hidden": true,
      "description": "Mark a build configuration as MacOS/X-only",
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Darwin"
      }
    }
  ],
  "testPresets": [
    {
      "name": ".windows",
      "hidden": true,
      "description": "Mark a test configuration as Windows-only",
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Windows"
      }
    },

    {
      "name": ".linux",
      "hidden": true,
      "description": "Mark a test configuration as Linux-only",
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Linux"
      }
    },

    {
      "name": ".macosx",
      "hidden": true,
      "description": "Mark a test configuration as MacOS/X-only",
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Darwin"
      }
    }
  ]
}