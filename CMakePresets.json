{
  "version": 6,
  "include": [
    "cmake/presets/common.json",
    "cmake/presets/clangcl.json",
    "cmake/presets/msvc.json",
    "cmake/presets/vcpkg.json"
  ],
  "configurePresets": [
    {
      "name": "ninja-clangcl-mt-s",
      "inherits": [ ".common", ".static", ".ninja-clangcl", ".testing" ]
    },

    {
      "name": "ninja-clangcl-mt-s-vcpkg",
      "inherits": [ ".common", ".static", ".ninja-clangcl", ".vcpkg", ".vcpkg-clangcl-static", ".testing" ]
    },

    {
      "name": "msvc-17-mt-s-vcpkg",
      "inherits": [ ".msvc-17-mt-s", ".vcpkg", ".vcpkg-msvc-static", ".testing" ]
    },

    {
      "name": "msvc-17-mt-s-vcpkg-14.40",
      "inherits": [ "msvc-17-mt-s-vcpkg", ".msvc-17-14.40", ".testing" ]
    },

    {
      "name": "msvc-17-mt-s-vcpkg-14.42",
      "inherits": [ "msvc-17-mt-s-vcpkg", ".msvc-17-14.42", ".testing" ]
    },

    {
      "name": "msvc-17-mt-s-vcpkg-14.44",
      "inherits": [ "msvc-17-mt-s-vcpkg", ".msvc-17-14.44", ".testing" ]
    }
  ],
  "buildPresets": [
    {
      "name": "ninja-clangcl-mt-s-vcpkg-release",
      "inherits": [ ".windows" ],
      "configurePreset": "ninja-clangcl-mt-s-vcpkg",
      "inheritConfigureEnvironment": true,
      "configuration": "Release"
    },
    {
      "name": "msvc-17-mt-s-vcpkg-release",
      "inherits": [ ".windows" ],
      "configurePreset": "msvc-17-mt-s-vcpkg",
      "inheritConfigureEnvironment": true,
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "ninja-clangcl-mt-s-vcpkg-release-test",
      "inherits": [ ".windows" ],
      "configurePreset": "ninja-clangcl-mt-s-vcpkg",
      "inheritConfigureEnvironment": true,
      "configuration": "Release"
    },
    {
      "name": "msvc-17-mt-s-vcpkg-release-test",
      "inherits": [ ".windows" ],
      "configurePreset": "msvc-17-mt-s-vcpkg",
      "inheritConfigureEnvironment": true,
      "configuration": "Release"
    }
  ],
  "workflowPresets": [
    {
      "name": "ninja-clangcl-mt-s-vcpkg-release-test",
      "steps": [
        {
          "type": "configure",
          "name": "ninja-clangcl-mt-s-vcpkg"
        },
        {
          "type": "build",
          "name": "ninja-clangcl-mt-s-vcpkg-release"
        },
        {
          "type": "test",
          "name": "ninja-clangcl-mt-s-vcpkg-release-test"
        }
      ]
    },
    {
      "name": "msvc-17-mt-s-vcpkg-release-test",
      "steps": [
        {
          "type": "configure",
          "name": "msvc-17-mt-s-vcpkg"
        },
        {
          "type": "build",
          "name": "msvc-17-mt-s-vcpkg-release"
        },
        {
          "type": "test",
          "name": "msvc-17-mt-s-vcpkg-release-test"
        }
      ]
    }
  ]
}