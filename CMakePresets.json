{
  "version": 6,
  "include": [
    "cmake/presets/windows-msbuild-msvc.json",
    "cmake/presets/windows-ninja-clangcl.json",
    "cmake/presets/linux-ninja-clang.json",
    "cmake/presets/linux-ninja-gcc.json",
    "cmake/presets/vcpkg.json"
  ],
  "configurePresets": [
    {
      "name": "linux-ninja-clang-s",
      "description": "Linux Ninja configuration using clang++-${ENV_COMPILER_VERSION}",
      "inherits": [ ".linux-ninja-clang", ".static", ".testing" ]
    },

    {
      "name": "linux-ninja-clang-s-vcpkg",
      "description": "Linux Ninja configuration using clang++-${ENV_COMPILER_VERSION} and vcpkg",
      "inherits": [ ".linux-ninja-clang", ".static", ".vcpkg-linux-any-static", ".testing" ]
    },

    {
      "name": "linux-ninja-gcc-s-vcpkg",
      "description": "Linux Ninja configuration using g++-${ENV_COMPILER_VERSION} and vcpkg",
      "inherits": [ ".linux-ninja-gcc", ".static", ".vcpkg-linux-any-static", ".testing" ]
    },

    {
      "name": "windows-ninja-clangcl-mt-s",
      "description": "Windows Ninja configuration using clang-cl.exe",
      "inherits": [ ".windows-ninja-clangcl", ".static", ".testing" ]
    },

    {
      "name": "windows-ninja-clangcl-mt-s-vcpkg",
      "description": "Windows Ninja configuration using clang-cl.ex and vcpkg",
      "inherits": [ ".windows-ninja-clangcl", ".static", ".vcpkg-windows-clangcl-static", ".testing" ]
    },

    {
      "name": "windows-msbuild-msvc-17-mt-s-vcpkg",
      "description": "Windows MSBuild configuration using ${MSVC_TOOLSET_VERSION} and vcpkg",
      "inherits": [ ".windows-msbuild-msvc-17", ".static", ".vcpkg-windows-msvc-static", ".testing" ]
    }
  ],
  "buildPresets": [
    {
      "name": "windows-ninja-clangcl-mt-s-vcpkg-release",
      "inherits": [ ".windows" ],
      "configurePreset": "windows-ninja-clangcl-mt-s-vcpkg",
      "inheritConfigureEnvironment": true,
      "configuration": "Release"
    },
    {
      "name": "windows-msbuild-msvc-17-mt-s-vcpkg-release",
      "inherits": [ ".windows" ],
      "configurePreset": "windows-msbuild-msvc-17-mt-s-vcpkg",
      "inheritConfigureEnvironment": true,
      "configuration": "Release"
    },
    {
      "name": "linux-ninja-clang-s-vcpkg-release",
      "inherits": [ ".linux" ],
      "configurePreset": "linux-ninja-clang-s-vcpkg",
      "inheritConfigureEnvironment": true,
      "configuration": "Release"
    },
    {
      "name": "linux-ninja-gcc-s-vcpkg-release",
      "inherits": [ ".linux" ],
      "configurePreset": "linux-ninja-gcc-s-vcpkg",
      "inheritConfigureEnvironment": true,
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "windows-ninja-clangcl-mt-s-vcpkg-test",
      "inherits": [ ".windows", ".junit" ],
      "configurePreset": "windows-ninja-clangcl-mt-s-vcpkg",
      "inheritConfigureEnvironment": true,
      "configuration": "Release"
    },
    {
      "name": "windows-msbuild-msvc-17-mt-s-vcpkg-test",
      "inherits": [ ".windows", ".junit" ],
      "configurePreset": "windows-msbuild-msvc-17-mt-s-vcpkg",
      "inheritConfigureEnvironment": true,
      "configuration": "Release"
    },
    {
      "name": "linux-ninja-clang-s-vcpkg-test",
      "inherits": [ ".linux", ".junit" ],
      "configurePreset": "linux-ninja-clang-s-vcpkg",
      "inheritConfigureEnvironment": true,
      "configuration": "Release"
    },
    {
      "name": "linux-ninja-gcc-s-vcpkg-test",
      "inherits": [ ".linux", ".junit" ],
      "configurePreset": "linux-ninja-gcc-s-vcpkg",
      "inheritConfigureEnvironment": true,
      "configuration": "Release"
    }
  ],
  "workflowPresets": [
    {
      "name": "windows-ninja-clangcl-mt-s-vcpkg",
      "steps": [
        {
          "type": "configure",
          "name": "windows-ninja-clangcl-mt-s-vcpkg"
        },
        {
          "type": "build",
          "name": "windows-ninja-clangcl-mt-s-vcpkg-release"
        },
        {
          "type": "test",
          "name": "windows-ninja-clangcl-mt-s-vcpkg-test"
        }
      ]
    },
    {
      "name": "windows-msbuild-msvc-17-mt-s-vcpkg",
      "steps": [
        {
          "type": "configure",
          "name": "windows-msbuild-msvc-17-mt-s-vcpkg"
        },
        {
          "type": "build",
          "name": "windows-msbuild-msvc-17-mt-s-vcpkg-release"
        },
        {
          "type": "test",
          "name": "windows-msbuild-msvc-17-mt-s-vcpkg-test"
        }
      ]
    },
    {
      "name": "linux-ninja-clang-s-vcpkg",
      "steps": [
        {
          "type": "configure",
          "name": "linux-ninja-clang-s-vcpkg"
        },
        {
          "type": "build",
          "name": "linux-ninja-clang-s-vcpkg-release"
        },
        {
          "type": "test",
          "name": "linux-ninja-clang-s-vcpkg-test"
        }
      ]
    },
    {
      "name": "linux-ninja-gcc-s-vcpkg",
      "steps": [
        {
          "type": "configure",
          "name": "linux-ninja-gcc-s-vcpkg"
        },
        {
          "type": "build",
          "name": "linux-ninja-gcc-s-vcpkg-release"
        },
        {
          "type": "test",
          "name": "linux-ninja-gcc-s-vcpkg-test"
        }
      ]
    }
  ]
}